//5ï¼Œ

#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>
fun(int x)
{
	long int i, y;
	y = 1;
	for (i = 1; i < x + 1; i++)
	{
		y = y * i;
	}
	return y;
}
int main()
{
	long int i, x, y;
	y = 0;
	scanf("%d", &x);
	for (i = 1; i < x + 1; i++)
	{
		y = y + fun(i);
	}
	printf("%d", y);
	return 0;
}
