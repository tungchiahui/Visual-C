//1.编程序将单词“China”加密成密文，加密规则是：用原字母后面第4个字母代替原字母。（用ASCII码操作）

#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>
int main()
{	
	char a = 'C', b = 'h', c = 'i', d = 'n', e = 'a';
	a += 4; //a=a+4
	b += 4;
	c += 4;
	d += 4;
	e += 4;
	printf("%c%c%c%c%c",a,b,c,d,e);
	return 0;
}


//2.从键盘输入圆环的外内半径值，编程序计算圆环的面积。要求π的取值为3.1415926，输入与输出均采用双精度。

#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>
#define π 3.1415926
int main()
{
	double R,r,S;
	printf("请输入大圆半径:");
	scanf("%lf", &R);
	printf("请输入小圆半径:");
	scanf("%lf", &r);
	S = R * R * π - r * r * π;
	printf("面积是: %lf", S);
	return 0;
}


//3.交换两个变量的值，由终端输入两个整数给变量x、y，然后交换x和y的值后，输出x和y。

#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>
int main()
{
	int x, y;
	printf("请输入x:");
	scanf("%d", &x);
	printf("请输入y:");
	scanf("%d", &y);
	printf("输出x:%d\n", y);
	printf("输出y:%d\n", x);
		return 0;
}

//4.输入一个整数x，如果x的值大于0请输出数值1，如果小于0请输出数值-1，如果等于0请输出数值0。

#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>
int main()
{
	int x;
	printf("请输入x:");
	scanf("%d", &x);
	if (x > 0) {
		printf("%d",1);
	}
	else
	{
		if (x < 0) {
			printf("%d", -1);
		}
		else {
			printf("%d", 0);
		}
        }
		return 0;
}

//5.输入两个整数，按照由大到小的顺序排序，最后输出。（提升题，第7题）

#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>
int main()
{
	int x, y;
	printf("请输入两个数字:\n");
	scanf("%d", &x);
	scanf("%d", &y);
	if (x >= y)
	{
		printf("输出:%d＞%d", x, y);
	}
	else
	{
		printf("输出:%d＞%d", y, x);
	}
		return 0;
}



//6.输入1~7的数字，显示出其代表的礼拜，并打印输出。

#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>
int main()
{
	int a;
	scanf("%d", &a);
	switch (a) {
	case 7:printf("星期日\n"); break;
	case 6:printf("星期六\n"); break;
	case 5:printf("星期五\n"); break;
	case 4:printf("星期四\n"); break;
	case 3:printf("星期三\n"); break;
	case 2:printf("星期二\n"); break;
	case 1:printf("星期一\n"); break;
	}
	return 0;
}

//7.输入3个整数，按照由大到小的顺序排序，最后输出。

#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>
int main()
{
	int a, b, c, d;
	printf("请输入3个数字:\n");
	scanf("%d,%d,%d", &a, &b, &c);
	if (a < c)   //若a比c小，a与c交换数值，从而a>c。
	{
		d = c;
		c = a;
		a = d;
	}
	if (c > b)  //若c比b小，b与c交换数值，从而b>c，此时c变为最小的数值。
	{
		d = c;
		c = b;
		b = d;
	}
	if (b > a) //若b比a大，a与b交换数值，从而a>b，a成为最大的值。
	{
		d = b;
		b = a;
		a = d;
	}
	printf("从大到小排列为:%d，%d，%d",a,b,c);
		return 0;
}
